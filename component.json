{
  "title": "OpenAPI/Swagger Component",
  "description": "elastic.io OpenAPI/Swagger Component",
  "docsUrl": "https://github.com/elasticio/open-api-component",
  "buildType":"docker",
  "credentials": {
    "fields": {
      "openApiUrl": {
        "viewClass": "TextFieldView",
        "label": "A URL to an OpenAPI/Swagger document",
        "required": true,
        "placeholder": "https://petstore.swagger.io/v2/swagger.json"
      },
      "auth": {
        "required": false,
        "viewClass": "HTTPAuthView"
      }
    },
    "oauth2" : {
      "client_id": "{{clientId}}",
      "client_secret": "{{clientSecret}}",
      "auth_uri": "{{authUri}}",
      "token_uri": "{{tokenUri}}"
    }
  },
  "actions": {
    "makeRequest": {
      "main": "./lib/actions/makeRequest.js",
      "title": "Make Request",
      "note": "Make Request",
      "fields": {
        "path": {
          "label": "Path",
          "required": true,
          "viewClass": "SelectView",
          "model":"getPath",
          "prompt": "Select a path"
        },
        "operation": {
          "label": "Operation",
          "required": true,
          "require": [
            "path"
          ],
          "viewClass": "SelectView",
          "model":"getOperations",
          "prompt": "Select an operation"
        },
        "dontThrowErrorFlg": {
          "label": "Don't throw Error on Failed Calls",
          "viewClass": "CheckBoxView"
        }
      },
      "dynamicMetadata": true
    }
  }
}
